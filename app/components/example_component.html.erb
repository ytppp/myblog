<span class="font-bold underline" title="<%= @title %>"><%= content %></span>
<div x-data="{ count: 0 }">
  <button x-on:click="count++">Increment</button>
  <span x-text="count"></span>
</div>
<div x-data="{ isOpen: false }">
  <button @click="isOpen = true">Open Dropdown</button>
  <div x-show="isOpen" class="fixed left-0 top-0 w-full h-full bg-slate-300 z-10 flex items-center justify-center">
    <div class="w-1/3 border-2 border-black border-solid rounded-sm" @click.away="isOpen = false">
      <h2>这是一个模态框</h2>
      <p>一些模态框的内容...</p>
      <button @click="isOpen = false" class="modal-close"><%= t("hello")%></button>
    </div>
  </div>
</div>