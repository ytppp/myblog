generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(uuid())
  title       String    @unique
  content     String?
  category    Category? @relation(fields: [category_id], references: [id])
  category_id String?
  user        User?     @relation(fields: [user_id], references: [id])
  user_id     String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}

model Category {
  id         String   @id @default(uuid())
  name       String   @unique
  posts      Post[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model User {
  id         String   @id @default(uuid())
  name       String   @unique
  email      String   @unique
  password   String
  posts      Post[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}