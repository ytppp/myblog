generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id         String   @id @default(cuid())
  title      String   @unique
  content    String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Category {
  id         String   @id @default(cuid())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}